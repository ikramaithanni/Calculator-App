<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Backgroud"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="bottom"
        android:padding="30dp"
        android:background="@color/input"
    >

        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/white"
            android:textSize="50sp"
            tools:text="4 - 2" />

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="50sp"
            android:textColor="@color/green"
            tools:text="2"
            />

    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_clear"
                style="@style/Button_Style"
                android:textColor="@color/red"
                android:text="C"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_bracket_left"
                style="@style/Button_Style"
                android:textColor="@color/green"
                android:text="("/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_bracket_right"
                style="@style/Button_Style"
                android:textColor="@color/green"
                android:text=")"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_division"
                style="@style/Button_Style"
                android:textColor="@color/green"
                android:text="รท"/>

        </TableRow>

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_7"
                style="@style/Button_Style"
                android:text="7"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_8"
                style="@style/Button_Style"
                android:text="8"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_9"
                style="@style/Button_Style"
                android:text="9"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_multuplication"
                style="@style/Button_Style"
                android:textColor="@color/green"
                android:text="ร"/>

        </TableRow>

        <TableRow android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_4"
                style="@style/Button_Style"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_5"
                style="@style/Button_Style"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_6"
                style="@style/Button_Style"
                android:text="6" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_moin"
                style="@style/Button_Style"
                android:text="-"
                android:textColor="@color/green" />

        </TableRow>
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_1"
                style="@style/Button_Style"
                android:text="1"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_2"
                style="@style/Button_Style"
                android:text="2"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_3"
                style="@style/Button_Style"
                android:text="3"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_plus"
                style="@style/Button_Style"
                android:textColor="@color/green"
                android:text="+"/>

        </TableRow>
        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/butto_bracket_moins"
                style="@style/Button_Style"
                android:text="+/-"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_0"
                style="@style/Button_Style"
                android:text="0"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_comma"
                style="@style/Button_Style"
                android:text=","/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_equal"
                style="@style/Button_Style"
                android:background="@color/green"
                android:text="="
                />

        </TableRow>
    </TableLayout>

</LinearLayout>